<%- include header.ejs %>
<body>
  <div class="container">
    <hr>
    Hello administrator. In this webpage, you can view all the reports generated by users, and see all the users.
    <hr>
    <div id=retrieveReport>
      <h3>Retrieve reports from Database:</h3>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Reported User</th>
            <th>Reported By</th>
            <th>Did not show up?</th>
            <th>Bad behaviour?</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
      <% for (i=0;i<ReportData.length;i++) {%>
          <tr>
            <td><%=ReportData[i].blacklisteduser%></td>
            <td><%=ReportData[i].byuser%></td>
            <td><%=ReportData[i].didnotshowup%></td>
            <td><%=ReportData[i].badbehavior%></td>
            <td><%=ReportData[i].detail%></td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
    <hr>
    <div id=retrieveUserData>
      <h3>Retrieve reports from Database:</h3>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>Username</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
      <% for (i=0;i<UserData.length;i++) {%>
          <tr>
            <td><%=UserData[i].username%></td>
            <td><%=UserData[i].email%></td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
</body>
<%- include footer.ejs %>
